<% @title = "Блог" %>

<div class="content">
  <div class="container blog">
    
	<div class="blog_left_area">	
		<%= image_tag('blog.png', :class => 'blog_img') %>
		<div class="tag_list_wrap">
		<b>Популярные метки</b>	
		<% @tags.each do |tag| %>
        <ul>
            <li><%= link_to tag.title, blog_path(:tag_id => tag.id), :remote => true %></li>
		</ul>
		<% end %>
		<div class="show_all"><%= link_to "Показать все", blog_path, :remote => true %></div>
		</div>
	</div>
		
    <div class="blog_main" style="" id="articles">
		<%= render 'articles' %>
    </div>
	
	<div class="buf"></div>


  </div>
</div>
