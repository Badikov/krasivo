

<% @title = @article.title %>

<div class="content">
  <div class="container blog" style="margin-bottom: 50px">
    
	<h1><%= @article.title %></h1>
	<div class="blog_date"><%= Russian::strftime(@article.date, "%d %B %Y %H:%M") %></div>
    <div class="blog_text"><%= @article.text.html_safe %></div>
	
	

	<script type="text/javascript" src="//yandex.st/share/share.js"
	charset="utf-8"></script>
	<div class="yashare-auto-init" data-yashareL10n="ru" data-yashareType="button" data-yashareQuickServices="yaru,vkontakte,facebook,twitter,odnoklassniki,moimir"></div>
	
	<!-- Put this script tag to the <head> of your page -->
	<script type="text/javascript" src="//vk.com/js/api/openapi.js?98"></script>

	<script type="text/javascript">
	  VK.init({apiId: 3813909, onlyWidgets: true});
	</script>

	<!-- Put this div tag to the place, where the Comments block will be -->
	<div id="vk_comments"></div>
	<script type="text/javascript">
	VK.Widgets.Comments("vk_comments", {limit: 10, width: "675", attach: "*"});
	</script>


  </div>
</div>
