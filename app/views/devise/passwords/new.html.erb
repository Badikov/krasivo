<div class="content">
  <div class="container" style="margin-top: 200px; margin-bottom: 50px; min-height: 400px;">
	<div class="text-page">

		<h2>Забыли пароль?</h2>

		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div>Электронная почта:<br /><br />
		  <%= f.email_field :email, :autofocus => true %></div>

		  <%= f.submit "Выслать новый пароль", :class => 'auth_button' %>
		<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>
