<div class="content">
  <div class="container" style="margin-top: 200px; margin-bottom: 50px; min-height: 400px;">
	<div class="text-page">



<h1>Пожалуйста, авторизуйтесь:</h1>



<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

  <div>Электронная почта:<br /><br />
  <%= f.email_field :email, :autofocus => true %></div>
<br />
  <div>Пароль:<br /><br />
  <%= f.password_field :password %></div>
<br />
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> Запомнить меня</div>
  <% end -%>
<br /><br />
<%= link_to 'Забыли пароль?', new_password_path(resource_name), :class => 'unlike_link' %>

  <div><%= f.submit "Авторизоваться", :class => 'auth_button' %></div>
<% end %>
  
 

</div>
    </div>
	</div>
