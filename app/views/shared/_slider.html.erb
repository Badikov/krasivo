<div class="fotorama-container main-page">
        <div class="fotorama" data-width="100%" data-height="610" data-aspectRatio="1.5"
        data-minHeight="610" data-fitToWindowHeight="true" data-fitToWindowHeightMargin="0" data-margin="0"
        data-nav="none" data-shadows="false" data-cropToFit="true" data-loop="true" data-autoplay="4000" data-click="false">
		<% @slides.each do |slide| %>
        <div class="slide">
          <%= link_to image_tag(slide.image.url(:medium)), slide.link %>
        </div>
  	    <% end %>
    <% @main.each do |event| %>
      <% unless event.front_images.blank? %>
          <div class="slide">
            <%= link_to image_tag(event.front_images.first.image.url(:medium)), event_path(event) %>
          </div>
      <% end %>
	    <% end %>
    </div>
</div>