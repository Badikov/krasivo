<div class="content">
 <div class="fotorama-container main-page">
        <div class="fotorama" data-width="100%" data-height="750" data-aspectRatio="1.5"
        data-minHeight="750" data-fitToWindowHeight="true" data-fitToWindowHeightMargin="0" data-margin="0"
        data-shadows="false" data-cropToFit="true">
		<% @main.each do |event| %>
        <div class="slide" style="background:url(<%= event.front_images.first.image.url(:medium) %>);">
            <div class="slide-content">
                <div class="container">
                    <div class="slide-buttons">
                        
                    </div>
                    <div class="slide-text">
                        <h2><%= event.title %></h2>
                        <span class="slide-date"><%= Russian::strftime(event.date, "%d %B") %><% if event.eventdetails? %>: 
						<%= event.eventdetails %>
						<% end %>
						</span>
                        <p><%= event.shorttext %></p>
						<%= link_to "подробнее", event, :class => 'button-blue' %>
                    </div>
                </div>
            </div>
        </div>
  	<% end %>
    </div>
</div>
    <div class="blocks-main">
		<% @closest.each do |event| %>
        <div class="block">
            <a href="#"><img src="/assets/demo1.jpg" alt="" /></a>
            <h2><%= event.title %></h2>
            <span class="blocks-date"><%= Russian::strftime(event.date, "%d %B") %> | 1500 <span class="b-rub">Р</span></span>
            <p><%= event.shorttext %></p>
            <%= link_to "подробнее", event %>
        </div>
		<% end %>

        
    </div>
    <div class="blocks-bottom">
		<% @events.each do |event| %>
        <div class="block">
            <a href="#"><img src="/assets/demo1.jpg" alt="" /></a>
            <h2><%= event.title %></h2>
            <span class="blocks-date"><%= Russian::strftime(event.date, "%d %B") %> | 1500 <span class="b-rub">Р</span></span>
            <p><%= event.shorttext %></p>
            <%= link_to "подробнее", event %>
        </div>
		<% end %>
    </div>
</div>